debug = true

app "xgen" {
    log_level = "debug"
    log_dir = "./logs"
    version = "3.1.4"
}

reverse "golang" {
    output_dir = "./models"
    name_space = "github.com/azhai/xgen/models"
    table_prefix = "*"
    include_tables = [ "t_*" ]
    exclude_tables = [ "*_bak", "*_test" ]
}

repeat "mysql" {
    key = "default"
    db_prefix = "db_"
    db_names = []
}

conn "mysql" "default" {
    host = "127.0.0.1"
    database = "test"
    username = "dba"
    password = "pass"
    log_file = "./logs/$KEY.log"
}

conn "redis" "cache" {
    host = "127.0.0.1"
    database = 0
    password = ""
}

conn "flashdb" "embed" {
    path = "/tmp/flashdb"
}
